extends ../layout


block content
    form(method="POST",  action="/courses/"+ course._id +"/edit?_method=PUT")
        div(class="mb-3")
            label(for="name", class="form-label") Name
            input(type="text", class="form-control", id="name", name="name", value=course.name)
        div(class="mb-3")
            label(for="content", class="form-label") Content
            input(type="text", class="form-control", id="content", name="content", value=course.content)
        div(class="mb-3")
            label(for="videoId", class="form-label") Video-Id
            input(type="text", class="form-control", id="videoId", name="videoId", value=course.videoId)
        button(type="submit", class="btn btn-primary") Cập nhật